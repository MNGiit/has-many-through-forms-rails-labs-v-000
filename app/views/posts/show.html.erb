<%= @post.title %>
<%= @post.content %>
<% @post.categories.each do |category| %>
  <%= category.name %>
<% end %>
<% @post.unique_comments.each do |comment| %>
 <%= link_to "#{comment.user.username} says: ", user_path(comment) %>
 <%= comment.content %>
<% end %>

<%= form_for (@comment) do |f| %>
  <%= f.label "content" %>
  <%= f.text_field :content %>
  <input type="hidden" name="comment[post_id]" value= <%=@comment.post.id%>>
  <%= f.collection_select :user_id, User.all, :id, :username, include_blank: true%>
  <%= f.fields_for :user, @comment.user do |userf| %>
    <%= userf.text_field :username %>
  <% end %>
  <%= f.submit %>
<% end %>
